#!/bin/bash

_check() {
    if [ $? -ne 0 ]; then
        echo "Error processing: $1"
        exit 1
    fi
}

_clean() {
    rm -rf \
        build \
        bin \
        install \
        lib \
        test/bin \

}

_distclean() {
    _clean
    rm -rf \
        gtest \

}

do_build() {
    if [ ! -d "build" ]; then
        mkdir build
    fi
    cd build
    echo "Building ..."
    cmake ..
    _check "cmake"
    make -j8
    _check "make"
    cd ..
}

if [ "$#" = "0" ]; then
    # With no parameter: build
    do_build
elif [ "$1" = "clean" ]; then
    _clean
    echo "Done."
elif [ "$1" = "distclean" ]; then
    _distclean
    echo "Done."
elif [ "$1" = "test" ]; then
    do_build
    shift
    echo "Testing... "
    for test in `ls test/bin/*`
    do
        $test "$@"
        _check "$test"
    done
elif [ "$1" = "ctest" ]; then
    shift
    do_build
    cd build
    ctest $@
    _check "ctest"
    cd ..
elif [ "$1" = "demo" ]; then
    do_build
    echo "Nothing to demo yet"
elif [ "$1" = "check" ]; then
    do_build
    cd build
    make cppcheck
elif [ "$1" = "install" ]; then
    do_build
    cd build
    make install
else
    echo "Usage: `basename $0` [test|clean|distclean|demo|check]"
fi
